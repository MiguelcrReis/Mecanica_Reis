@model IEnumerable<Mecanica.Models.Dtos.VeiculoDto>

@{
    ViewData["Title"] = "List";
}

<h1>Veículos Cadastrados</h1>
<p>
    <a asp-action="Create">Cadastrar veículo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model =>model.Placa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fabricante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Placa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fabricante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td>
                    @Html.ActionLink("Atualizar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id  }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.Id  })
                </td>
            </tr>
        }
    </tbody>
</table>
