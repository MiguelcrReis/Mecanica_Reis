@model Mecanica.Models.Dtos.ClienteDto

@{
    ViewData["Title"] = "CreatePF";
}

<h1>Cadastro de Cliente Pessoa Física</h1>

<h4>Pessoa Física</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePF">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PessoaFisica.Nome" class="control-label">Nome</label>
                <input asp-for="PessoaFisica.Nome" class="form-control" />
                <span asp-validation-for="PessoaFisica.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PessoaFisica.Cpf" class="control-label">CPF</label>
                <input asp-for="PessoaFisica.Cpf" class="form-control" />
                <span asp-validation-for="PessoaFisica.Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-primary" role="button" asp-action="Create">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

